---
  const LINKS: { name: string; href: string }[] = [
    { name: "Brigadeiros", href: "/brigadeiros" },
    { name: "About", href: "/about" },
    { name: "Contact", href: "/contact" },
  ];
---

<div>
  <div>
    <nav>
      <ul class="flex justify-center gap-4">
        {LINKS.map(({ name, href }) => (
          <li class="text-right">
            <a class="uppercase text-sm p-2 block" {href}>{name}</a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</div>
