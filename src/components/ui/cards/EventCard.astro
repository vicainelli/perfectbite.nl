---
const { event } = Astro.props;
---

<div
    data-testid={event.id}
    class="flex md:flex-col w-full gap-4 bg-white p-4 rounded-md shadow-md md:max-w-64"
>
    <div class="w-20 h-20 md:w-full md:h-full relative">
        <div class="relative aspect-square w-full border-4">
            <img src="/placeholder.svg" height="60" alt="" />
        </div>
    </div>
    <div>
        <h3 class="text-sm md:text-lg font-bold text-balance">{event.name}</h3>
        <address class="text-gray-400 text-sm">{event.location}</address>

        <p class="text-sm">
            {
                new Date(event.start_date).toLocaleDateString("en-UK", {
                    weekday: "short",
                    year: "numeric",
                    month: "short",
                    day: "numeric",
                    hour: "numeric",
                    minute: "numeric",
                })
            }
        </p>
    </div>
</div>
