---
const { event } = Astro.props;
---

<div data-testid={event.id} class="flex w-full gap-4 bg-white p-4 rounded-md shadow-md">
  <div class="w-20 h-20">
    <div class="relative aspect-square w-full border-4">
    <img src="/placeholder.svg" height="100" alt="">
    </div>
  </div>
  <div>
    <h3 class="text-lg font-bold">{event.name}</h3>
    <p>
      Date: {new Date(event.start_date).toLocaleDateString('en-UK',
        { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: 'numeric' }
      )}
      {/* - {event.end_date} */}
    </p>
    {/* <p class="text-gray-400 text-sm">{event..date}</p> */}
    {/* <p class="text-gray-400 text-sm">{event..location}</p> */}
  </div>
</div>